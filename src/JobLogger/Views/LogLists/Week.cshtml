@model IEnumerable<BaseLog>

<br />
@if (Model.Count() <= 0)
{
    <div class="row">
    <div class="panel panel-default col-md-6 col-md-offset-3">
        <div class="panel-heading">
            <h3 class="panel-title">No Logs Found!</h3>
        </div>
        <div class="panel-body">
            <a class="btn btn-default btn-block"
               asp-controller="LogLists"
               asp-action="Add">
                Add Log
            </a>
        </div>
    </div>
        </div>
}
else
{
    @foreach (BaseLog log in Model)
    {
        <div class="panel panel-default">
            <div class="panel-body">
                @if (log is ActivityLog)
                {
                    <text>Activity Log!</text>
                } else if (log is ContactLog)
                {
                    <text>Contact Log!</text>
                } else
                {
                    <text>Unknown Log!</text>
                }
            </div>


        </div>
    }
}