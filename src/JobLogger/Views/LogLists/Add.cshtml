<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#Activity" aria-controls="Activity" role="tab" data-toggle="tab">Activity Log</a></li>
    <li role="presentation"><a href="#Contact" aria-controls="Contact" role="tab" data-toggle="tab">Contact Log</a></li>
</ul>
<!-- Tabs bodies -->
<div id="LogForms" class="tab-content">
    <!-- Activity form -->
    <div role="tabpanel" class="tab-pane active" id="Activity">
        <form id="LogActivity" class="form-horizontal" data-bind="submit: postLog">
            <div class="form-group">
                <label for="LogActDate" class="col-md-1 control-label">Date</label>
                <div class="col-md-4">
                    <input type="date" class="form-control" id="LogActDate"
                           data-bind="value: LogDate" />
                </div>
                <label for="LogLoc" class="col-md-1 control-label">Location</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="LogLoc"
                           maxlength="64" placeholder="e.g. WorkSource"
                           data-bind="value: Location" />
                </div>
            </div>
            <div class="form-group">
                <label for="LogActDesc" class="col-md-1 control-label">Description</label>
                <div class="col-md-11">
                    <textarea class="form-control" id="LogActDesc" rows="5"
                              maxlength="256" placeholder="Required"
                              data-bind="value: Description"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 col-md-offset-10">
                    <button type="submit" class="form-control btn-primary"
                            id="LogActSubmit">
                        Add Log
                    </button>
                </div>
            </div>
        </form>
    </div>
    <!-- Contact form -->
    <div role="tabpanel" class="tab-pane" id="Contact">
        <form id="LogContact" class="form-horizontal" data-bind="submit: postLog">
            <div class="form-group">
                <label for="LogConDate" class="col-md-1 control-label">Date</label>
                <div class="col-md-4">
                    <input type="date" class="form-control" id="LogConDate"
                           data-bind="value: LogDate" />
                </div>
                <label for="LogEmp" class="col-md-1 control-label">Employer</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="LogEmp"
                           maxlength="64" placeholder="Required"
                           data-bind="value: Employer" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-md-offset-1">
                    <div class="panel panel-default">
                        <div class="panel-heading">Contact Type</div>
                        <div class="panel-body">
                            <div class="btn-group" data-toggle="buttons"
                                 data-bind="radio: MethodType">
                                @foreach (int val in typeof(MethodType).GetEnumValues())
                                {
                                <label class="btn btn-primary active">
                                    <input type="radio" name="method"
                                           value="@val" autocomplete="off" checked />
                                    @typeof(MethodType).GetEnumName(val)
                                </label>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-md-offset-1">
                    <div class="panel panel-default">
                        <div class="panel-heading">Means of Contact</div>
                        <div class="panel-body">
                            <div class="btn-group" data-toggle="buttons"
                                 data-bind="radio: MeansType">
                                @foreach (int val in typeof(MeansType).GetEnumValues())
                                {
                                <label class="btn btn-primary active">
                                    <input type="radio" name="method"
                                           value="@val" autocomplete="off" checked />
                                    @typeof(MeansType).GetEnumName(val)
                                </label>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="LogContact" class="col-md-1 control-label">Contact</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" maxlength="64"
                           data-bind="value: Contact,
                                      attr: {placeholder: $root.contactPrompt()}" />
                </div>
                <label for="LogPhone" class="col-md-1 control-label">Phone</label>
                <div class="col-md-5">
                    <input type="tel" class="form-control" id="LogPhone"
                           maxlength="13" placeholder="360-123-4567 (optional)"
                           data-bind="value: Phone" />
                </div>
            </div>
            <div class="form-group">
                <label for="LogAddress" class="col-md-1 control-label">Address</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" maxlength="64"
                           data-bind="value: Address,
                                      attr: {placeholder: $root.addressPrompt()}" />
                </div>
                <label for="LogCity" class="col-md-1 control-label">City</label>
                <div class="col-md-2">
                    <input type="tel" class="form-control" id="LogCity"
                           maxlength="32" data-bind="value: City" />
                </div>
                <label for="LogState" class="col-md-1 control-label">State</label>
                <div class="col-md-1">
                    <input type="tel" class="form-control" id="LogState"
                           maxlength="32" value="WA" data-bind="value: State" />
                </div>
            </div>
            <div class="form-group">
                <label for="LogConDesc" class="col-md-1 control-label">Description</label>
                <div class="col-md-11">
                    <textarea class="form-control" id="LogConDesc" rows="5"
                              maxlength="256" placeholder="Required"
                              data-bind="value: Description"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 col-md-offset-10">
                    <button type="submit" class="form-control btn-primary" id="LogConSubmit">
                        Add Log
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


@section scripts
{
    <script src="~/scripts/AddForm.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(function () {
            // Wire up tabs
            $("li a").click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            })
        })
    </script>
}
